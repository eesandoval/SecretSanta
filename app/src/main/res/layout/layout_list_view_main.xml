<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/layout_list_view_user_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_list_view_username"
            android:textColor="@color/colorPrimaryText"
            android:layout_toEndOf="@id/layout_list_view_user_image"/>

        <Button
            android:id="@+id/layout_list_view_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_menu_edit"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/layout_list_view_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_menu_delete"
            android:layout_toStartOf="@id/layout_list_view_edit"/>

    </RelativeLayout>

    <ImageView
        android:paddingTop="10dp"
        android:id="@+id/layout_list_view_image_view"
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <!-- New line -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Header cannot exceed 56 characters, or else truncation occurs -->
    <TextView
        android:id="@+id/layout_list_view_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dummy_header_text"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryText"/>

    <!-- New line -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/layout_list_view_body_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:text="@string/dummy_paragraph_text"
        android:textColor="@color/colorPrimaryText"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryLighter" />

</LinearLayout>